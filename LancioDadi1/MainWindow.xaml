        </Grid.Background>
        <Button x:Name="Brn_Lancia" Content="Lancia i Dadi" HorizontalAlignment="Left" Height="53" Margin="40,36,0,0" VerticalAlignment="Top" Width="196" FontSize="20" Click="Brn_Lancia_Click"/>
        <Label x:Name="Lbl_Risultato" Content="" HorizontalAlignment="Left" Height="54" Margin="295,36,0,0" VerticalAlignment="Top" Width="472" FontSize="22"/>

    </Grid>
